{
  "name": "sniggle.me partner links",
  "version": "1.0",
  "manifest_version": 2,
  "description": "every purchase on the affiliated sites counts for sniggle.me (based on JupiterBroadcasting Affiliate Redirect",
  "page_action" :
  {
    "default_icon" : "icon128.png",
    "default_title" : "You're supporting sniggle.me with your purchase"
  },
  "icons": { "128": "icon128.png" },
  "permissions": [  "webRequest", "webRequestBlocking", 
                      "*://*.amazon.com/*",
                      "*://*.amazon.co.uk/*",
                      "*://*.amazon.de/*",
                      "*://*.amazon.es/*",
                      "*://*.amazon.fr/*",
                      "*://*.amazon.it/*",
		      "tabs"
                 ], 
	"background": {
		"scripts": ["background.js"]
  }
}
